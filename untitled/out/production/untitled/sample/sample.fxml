<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">

   <top>
      <VBox>
         <MenuBar>
            <Menu text="File">
               <!--<MenuItem text="Save" onAction="#onSave" />
               <MenuItem text="Exit" onAction="#onExit" /> -->
            </Menu>
         </MenuBar>

         <ToolBar prefHeight="0.0" prefWidth="600.0">
            <TextField fx:id="brushSize" text="18" />
            <ColorPicker fx:id="colorPicker" />
            <CheckBox fx:id="eraser" text="Eraser" />
         </ToolBar>
         <ToolBar prefHeight="40.0" prefWidth="600.0">
            <items>
               <Button fx:id="Eraser" mnemonicParsing="false" onAction="#display" prefHeight="0.0" prefWidth="52.0">
                  <graphic>
                     <ImageView fitHeight="18.0" fitWidth="28.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                           <Image url="@Images/eraser.gif" />
                        </image>
                     </ImageView>
                  </graphic>
               </Button>
               <Button mnemonicParsing="false" prefHeight="0.0" prefWidth="52.0">
                  <graphic>
                     <ImageView fitHeight="18.0" fitWidth="42.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                           <Image url="@Images/fill.gif" />
                        </image>
                     </ImageView>
                  </graphic>
               </Button>
               <Button mnemonicParsing="false" prefHeight="0.0" prefWidth="52.0">
                  <graphic>
                     <ImageView fitHeight="21.0" fitWidth="46.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                           <Image url="@Images/pencil.gif" />
                        </image>
                     </ImageView>
                  </graphic>
               </Button>
               <Button mnemonicParsing="false" prefHeight="4.0" prefWidth="11.0">
                  <graphic>
                     <ImageView fitHeight="20.0" fitWidth="31.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                           <Image url="@Images/rectangle.gif" />
                        </image>
                     </ImageView>
                  </graphic>
               </Button>
            </items>
         </ToolBar>
      </VBox>
   </top>

   <center>
      <Canvas fx:id="canvas" height="639.0" width="600" />
   </center>

</BorderPane>
